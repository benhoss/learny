{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShortAnswerGame",
  "type": "object",
  "required": ["questions"],
  "properties": {
    "title": { "type": "string" },
    "intro": { "type": "string" },
    "estimated_time_minutes": { "type": "integer", "minimum": 1 },
    "difficulty": { "type": "number", "minimum": 0, "maximum": 1 },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["prompt", "answer"],
        "properties": {
          "prompt": { "type": "string" },
          "answer": { "type": "string" },
          "accepted_answers": {
            "type": "array",
            "items": { "type": "string" }
          },
          "hint": { "type": "string" },
          "explanation": { "type": "string" },
          "topic": { "type": "string" },
          "difficulty": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}
