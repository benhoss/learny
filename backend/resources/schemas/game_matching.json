{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MatchingGame",
  "type": "object",
  "required": ["pairs"],
  "properties": {
    "title": { "type": "string" },
    "intro": { "type": "string" },
    "estimated_time_minutes": { "type": "integer", "minimum": 1 },
    "difficulty": { "type": "number", "minimum": 0, "maximum": 1 },
    "pairs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["left", "right"],
        "properties": {
          "left": { "type": "string" },
          "right": { "type": "string" },
          "explanation": { "type": "string" },
          "topic": { "type": "string" },
          "difficulty": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}
